<figure class="image">
    {% if include.outurl %}
        {% assign baseurl = '' %}
        {% assign url = include.outurl %}
    {% else %}
        {% assign baseurl = site.baseurl%}
        {% assign url = include.url %}
    {% endif %}
    {% if include.width %}
        <img src="{{baseurl}}{{url }}" alt="{{ include.description }}" style="max-width:{{include.width}}px; width:100%; border:1px solid #eee;">
    {% else %}
        <img src="{{baseurl}}{{url }}" alt="{{ include.description }}" width="300" style="border:1px solid #eee;">
    {% endif %}
    <figcaption class="font-italic text-muted">{{ include.description }}</figcaption>
</figure>